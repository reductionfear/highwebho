{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.6.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "commands": {
    "highlight_yellow": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "__MSG_highlightWithYellow__"
    },
    "highlight_green": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "__MSG_highlightWithGreen__"
    },
    "highlight_blue": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+Shift+3"
      },
      "description": "__MSG_highlightWithBlue__"
    },
    "highlight_pink": {
      "suggested_key": {
        "default": "Ctrl+Shift+4",
        "mac": "Command+Shift+4"
      },
      "description": "__MSG_highlightWithPink__"
    },
    "highlight_orange": {
      "description": "__MSG_highlightWithOrange__"
    },
    "highlight_custom_1": {
      "suggested_key": {
        "default": "Ctrl+Shift+5",
        "mac": "Command+Shift+5"
      },
      "description": "__MSG_highlightWithCustom1__"
    },
    "highlight_custom_2": {
      "suggested_key": {
        "default": "Ctrl+Shift+6",
        "mac": "Command+Shift+6"
      },
      "description": "__MSG_highlightWithCustom2__"
    },
    "highlight_custom_3": {
      "suggested_key": {
        "default": "Ctrl+Shift+7",
        "mac": "Command+Shift+7"
      },
      "description": "__MSG_highlightWithCustom3__"
    },
    "highlight_custom_4": {
      "suggested_key": {
        "default": "Ctrl+Shift+8",
        "mac": "Command+Shift+8"
      },
      "description": "__MSG_highlightWithCustom4__"
    },
    "highlight_custom_5": {
      "suggested_key": {
        "default": "Ctrl+Shift+9",
        "mac": "Command+Shift+9"
      },
      "description": "__MSG_highlightWithCustom5__"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "minimap.js",
        "controls.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pages-list.html",
        "pages-list.js",
        "shortcuts-settings.html",
        "shortcuts-settings.js",
        "color-picker.html",
        "color-picker.js",
        "color-picker.css",
        "images/icon48.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "text-highlighter@marks.extension",
      "strict_min_version": "112.0"
    }
  }
}
